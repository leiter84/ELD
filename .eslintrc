{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "plugins": ["react", "prettier"],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "prettier",
    "prettier/react"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "no-console": 0,
    "react/prop-types": [
      "error",
      {
        "ignore": ["navigation"]
      }
    ],
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "none",
        "printWidth": 70
      }
    ]
  },
  "settings": {
    "react": {
      "version": "16.4"
    }
  }
}
